            "content": "<!DOCTYPE html>\r\n<html lang=\"en\">\r\n<head>\r\n    <meta charset=\"UTF-8\">\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\r\n    <title>Checkout - Tech Bazzar</title>\r\n    <link rel=\"stylesheet\" href=\"style.css\">\r\n    <link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css\">\r\n   \r\n</head>\r\n<body>\r\n    <!-- Navigation -->\r\n    <nav>\r\n        <div class=\"nav-container\">\r\n            <div class=\"logo\">\r\n                <img src=\"image/logo.png\" alt=\"Tech Bazzar Logo\" class=\"logo-img\">\r\n                <p>Tech Bazzar</p>\r\n            </div>\r\n            \r\n            <div class=\"nav-menu\">\r\n                <ul class=\"nav-links\">\r\n                    <li><a href=\"index.html\" class=\"nav-link\">Home</a></li>\r\n                    <li><a href=\"products.html\" class=\"nav-link\">Products</a></li>\r\n                    <li><a href=\"#about\" class=\"nav-link\">About Us</a></li>\r\n                    <li><a href=\"#contact\" class=\"nav-link\">Contact</a></li>\r\n                </ul>\r\n                \r\n                <div class=\"nav-right\">\r\n                    <button class=\"login-btn\">\r\n                        <i class=\"fas fa-user\"></i>\r\n                        <span>Login/Register</span>\r\n                    </button>\r\n                    <button class=\"language-btn\" aria-label=\"Change language\">\r\n                        <i class=\"fa-solid fa-globe\"></i>\r\n                    </button>\r\n                    <a href=\"cart.html\" class=\"cart-btn\" aria-label=\"Shopping cart\">\r\n                        <i class=\"fa-solid fa-cart-shopping\"></i>\r\n                        <span class=\"cart-count\">3</span>\r\n                    </a>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </nav>\r\n\r\n    <!-- Checkout Content -->\r\n    <div class=\"checkout-container\">\r\n        <div class=\"checkout-main\">\r\n            <div class=\"checkout-header\">\r\n                <h1 class=\"checkout-title\">Checkout</h1>\r\n                <div class=\"checkout-steps\">\r\n                    <div class=\"step completed\">\r\n                        <div class=\"step-number\">1</div>\r\n                        <span>Cart</span>\r\n                    </div>\r\n                    <div class=\"step-divider\"></div>\r\n                    <div class=\"step active\">\r\n                        <div class=\"step-number\">2</div>\r\n                        <span>Information</span>\r\n                    </div>\r\n                    <div class=\"step-divider\"></div>\r\n                    <div class=\"step\">\r\n                        <div class=\"step-number\">3</div>\r\n                        <span>Payment</span>\r\n                    </div>\r\n                    <div class=\"step-divider\"></div>\r\n                    <div class=\"step\">\r\n                        <div class=\"step-number\">4</div>\r\n                        <span>Confirmation</span>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n            \r\n            <!-- Shipping Information -->\r\n            <div class=\"checkout-section\">\r\n                <h2 class=\"section-title\"><i class=\"fas fa-truck\"></i> Shipping Information</h2>\r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"fullName\">Full Name</label>\r\n                    <input type=\"text\" id=\"fullName\" class=\"form-input\" placeholder=\"Enter your full name\" required>\r\n                </div>\r\n                \r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"phone\">Phone Number</label>\r\n                    <input type=\"tel\" id=\"phone\" class=\"form-input\" placeholder=\"Enter your phone number\" required>\r\n                </div>\r\n                \r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"address\">Address</label>\r\n                    <input type=\"text\" id=\"address\" class=\"form-input\" placeholder=\"Enter your street address\" required>\r\n                </div>\r\n                \r\n                <div class=\"form-row\">\r\n                    <div class=\"form-group\">\r\n                        <label class=\"form-label\" for=\"city\">City</label>\r\n                        <input type=\"text\" id=\"city\" class=\"form-input\" placeholder=\"Enter your city\" required>\r\n                    </div>\r\n                    \r\n                    <div class=\"form-group\">\r\n                        <label class=\"form-label\" for=\"state\">State/Region</label>\r\n                        <input type=\"text\" id=\"state\" class=\"form-input\" placeholder=\"Enter your state/region\" required>\r\n                    </div>\r\n                </div>\r\n                \r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"notes\">Delivery Notes (Optional)</label>\r\n                    <textarea id=\"notes\" class=\"form-input\" rows=\"3\" placeholder=\"Any special instructions for delivery\"></textarea>\r\n                </div>\r\n            </div>\r\n            \r\n            <!-- Payment Method -->\r\n            <div class=\"checkout-section\">\r\n                <h2 class=\"section-title\"><i class=\"fas fa-credit-card\"></i> Payment Method</h2>\r\n                <div class=\"payment-methods\">\r\n                    <!-- Bankak Payment -->\r\n                    <div class=\"payment-method\" data-method=\"bankak\">\r\n                        <div class=\"payment-icon bankak-icon\">\r\n                            <i class=\"fas fa-mobile-alt\"></i>\r\n                        </div>\r\n                        <div class=\"payment-details\">\r\n                            <div class=\"payment-name\">Bankak</div>\r\n                            <div class=\"payment-description\">Sudanese mobile banking app</div>\r\n                        </div>\r\n                        <i class=\"fas fa-check-circle\" style=\"color: #18685b; display: none;\"></i>\r\n                    </div>\r\n                    \r\n                    <!-- O-Cash Payment -->\r\n                    <div class=\"payment-method\" data-method=\"ocash\">\r\n                        <div class=\"payment-icon ocash-icon\">\r\n                            <i class=\"fas fa-wallet\"></i>\r\n                        </div>\r\n                        <div class=\"payment-details\">\r\n                            <div class=\"payment-name\">O-Cash</div>\r\n                            <div class=\"payment-description\">Sudanese digital wallet</div>\r\n                        </div>\r\n                        <i class=\"fas fa-check-circle\" style=\"color: #18685b; display: none;\"></i>\r\n                    </div>\r\n                    \r\n                    <!-- Cash on Delivery -->\r\n                    <div class=\"payment-method\" data-method=\"cod\">\r\n                        <div class=\"payment-icon cod-icon\">\r\n                            <i class=\"fas fa-money-bill-wave\"></i>\r\n                        </div>\r\n                        <div class=\"payment-details\">\r\n                            <div class=\"payment-name\">Cash on Delivery</div>\r\n                            <div class=\"payment-description\">Pay when you receive your order</div>\r\n                        </div>\r\n                        <i class=\"fas fa-check-circle\" style=\"color: #18685b; display: none;\"></i>\r\n                    </div>\r\n                </div>\r\n                \r\n                <!-- Payment Instructions -->\r\n                <div id=\"bankak-instructions\" class=\"payment-instructions\">\r\n                    <h3>How to pay with Bankak:</h3>\r\n                    <ol>\r\n                        <li>Open the Bankak app on your phone</li>\r\n                        <li>Go to the \"Payments\" section</li>\r\n                        <li>Select \"Pay to Merchant\"</li>\r\n                        <li>Enter merchant code: <strong>TB1234</strong></li>\r\n                        <li>Enter the total amount: <strong id=\"bankak-amount\">SDG 2,499</strong></li>\r\n                        <li>Complete the transaction</li>\r\n                        <li>Take a screenshot of the confirmation and upload it if required</li>\r\n                    </ol>\r\n                </div>\r\n                \r\n                <div id=\"ocash-instructions\" class=\"payment-instructions\">\r\n                    <h3>How to pay with O-Cash:</h3>\r\n                    <ol>\r\n                        <li>Open the O-Cash app on your phone</li>\r\n                        <li>Go to the \"Send Money\" section</li>\r\n                        <li>Select \"To Merchant\"</li>\r\n                        <li>Enter merchant ID: <strong>TB5678</strong></li>\r\n                        <li>Enter the total amount: <strong id=\"ocash-amount\">SDG 2,499</strong></li>\r\n                        <li>Complete the transaction</li>\r\n                        <li>Take a screenshot of the confirmation and upload it if required</li>\r\n                    </ol>\r\n                </div>\r\n                \r\n                <div id=\"cod-instructions\" class=\"payment-instructions\">\r\n                    <h3>Cash on Delivery Information:</h3>\r\n                    <ul>\r\n                        <li>You will pay when you receive your order</li>\r\n                        <li>Please have the exact amount ready: <strong id=\"cod-amount\">SDG 2,499</strong></li>\r\n                        <li>Our delivery agent will provide a receipt</li>\r\n                        <li>You can inspect the product before payment</li>\r\n                    </ul>\r\n                </div>\r\n            </div>\r\n        </div>\r\n        \r\n        <!-- Order Summary -->\r\n        <div class=\"order-summary\">\r\n            <h2 class=\"summary-title\">Order Summary</h2>\r\n            \r\n            <div class=\"order-items\">\r\n                <!-- Order Item 1 -->\r\n                <div class=\"order-item\">\r\n                    <div class=\"item-image\">\r\n                        <img src=\"https://images.unsplash.com/photo-1496181133206-80ce9b88a853?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60\" alt=\"MacBook Pro\">\r\n                    </div>\r\n                    <div class=\"item-details\">\r\n                        <div class=\"item-name\">Apple MacBook Pro 13\" 2020</div>\r\n                        <div class=\"item-price\">SDG 1,899</div>\r\n                        <div class=\"item-quantity\">Quantity: 1</div>\r\n                    </div>\r\n                </div>\r\n                \r\n                <!-- Order Item 2 -->\r\n                <div class=\"order-item\">\r\n                    <div class=\"item-image\">\r\n                        <img src=\"https://images.unsplash.com/photo-1544244015-0df4b3ffc6b0?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60\" alt=\"Samsung Tablet\">\r\n                    </div>\r\n                    <div class=\"item-details\">\r\n                        <div class=\"item-name\">Samsung Galaxy Tab S7 11\"</div>\r\n                        <div class=\"item-price\">SDG 600</div>\r\n                        <div class=\"item-quantity\">Quantity: 1</div>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n            \r\n            <div class=\"summary-totals\">\r\n                <div class=\"total-row\">\r\n                    <span class=\"total-label\">Subtotal</span>\r\n                    <span class=\"total-amount\">SDG 2,499</span>\r\n                </div>\r\n                <div class=\"total-row\">\r\n                    <span class=\"total-label\">Shipping</span>\r\n                    <span class=\"total-amount\">SDG 0</span>\r\n                </div>\r\n                <div class=\"total-row\">\r\n                    <span class=\"total-label\">Tax</span>\r\n                    <span class=\"total-amount\">SDG 0</span>\r\n                </div>\r\n                <div class=\"total-row grand-total\">\r\n                    <span>Total</span>\r\n                    <span>SDG 2,499</span>\r\n                </div>\r\n            </div>\r\n            \r\n            <button id=\"checkout-btn\" class=\"checkout-btn\" disabled>\r\n                <i class=\"fas fa-lock\"></i> Complete Order\r\n            </button>\r\n            \r\n            <div class=\"security-notice\">\r\n                <i class=\"fas fa-shield-alt\"></i>\r\n                <span>Your payment information is secure and encrypted</span>\r\n            </div>\r\n        </div>\r\n    </div>\r\n\r\n    <!-- Footer -->\r\n    <footer>\r\n        <div class=\"footer-inner\">\r\n            <div class=\"footer-brand\">\r\n                <div class=\"brand-logo\">TB</div>\r\n                <div class=\"brand-info\">\r\n                    <h3>Tech Bazzar</h3>\r\n                    <p>Your trusted source for quality used electronics</p>\r\n                </div>\r\n            </div>\r\n            <div class=\"footer-columns\">\r\n                <div class=\"col\">\r\n                    <h4>Shop</h4>\r\n                    <ul>\r\n                        <li><a href=\"#\">Laptops</a></li>\r\n                        <li><a href=\"#\">Smartphones</a></li>\r\n                        <li><a href=\"#\">Tablets</a></li>\r\n                        <li><a href=\"#\">Accessories</a></li>\r\n                    </ul>\r\n                </div>\r\n                <div class=\"col\">\r\n                    <h4>Support</h4>\r\n                    <ul>\r\n                        <li><a href=\"#\">Contact Us</a></li>\r\n                        <li><a href=\"#\">FAQ</a></li>\r\n                        <li><a href=\"#\">Shipping & Returns</a></li>\r\n                        <li><a href=\"#\">Warranty</a></li>\r\n                    </ul>\r\n                </div>\r\n                <div class=\"col\">\r\n                    <h4>Company</h4>\r\n                    <ul>\r\n                        <li><a href=\"#\">About Us</a></li>\r\n                        <li><a href=\"#\">Careers</a></li>\r\n                        <li><a href=\"#\">Privacy Policy</a></li>\r\n                        <li><a href=\"#\">Terms of Service</a></li>\r\n                    </ul>\r\n                </div>\r\n                <div class=\"col\">\r\n                    <h4>Connect</h4>\r\n                    <ul>\r\n                        <li><a href=\"#\">Facebook</a></li>\r\n                        <li><a href=\"#\">Twitter</a></li>\r\n                        <li><a href=\"#\">Instagram</a></li>\r\n                        <li><a href=\"#\">YouTube</a></li>\r\n                    </ul>\r\n                </div>\r\n            </div>\r\n        </div>\r\n        <div class=\"footer-bottom\">\r\n            <div class=\"copyright\">© 2023 Tech Bazzar. All rights reserved.</div>\r\n            <div class=\"policies\">\r\n                <a href=\"#\">Privacy Policy</a>\r\n                <a href=\"#\">Terms of Service</a>\r\n                <a href=\"#\">Cookie Policy</a>\r\n            </div>\r\n        </div>\r\n    </footer>\r\n\r\n    <script>\r\n        // Payment method selection\r\n        document.querySelectorAll('.payment-method').forEach(method => {\r\n            method.addEventListener('click', function() {\r\n                // Remove selected class from all methods\r\n                document.querySelectorAll('.payment-method').forEach(m => {\r\n                    m.classList.remove('selected');\r\n                    m.querySelector('.fa-check-circle').style.display = 'none';\r\n                });\r\n                \r\n                // Add selected class to clicked method\r\n                this.classList.add('selected');\r\n                this.querySelector('.fa-check-circle').style.display = 'block';\r\n                \r\n                // Hide all instructions\r\n                document.querySelectorAll('.payment-instructions').forEach(instruction => {\r\n                    instruction.classList.remove('active');\r\n                });\r\n                \r\n                // Show instructions for selected method\r\n                const methodType = this.getAttribute('data-method');\r\n                document.getElementById(`${methodType}-instructions`).classList.add('active');\r\n                \r\n                // Enable checkout button\r\n                document.getElementById('checkout-btn').disabled = false;\r\n            });\r\n        });\r\n        \r\n        // Form validation\r\n        const formInputs = document.querySelectorAll('.form-input');\r\n        formInputs.forEach(input => {\r\n            input.addEventListener('input', function() {\r\n                validateForm();\r\n            });\r\n        });\r\n        \r\n        function validateForm() {\r\n            let isValid = true;\r\n            \r\n            formInputs.forEach(input => {\r\n                if (input.hasAttribute('required') && !input.value.trim()) {\r\n                    isValid = false;\r\n                }\r\n            });\r\n            \r\n            const paymentSelected = document.querySelector('.payment-method.selected');\r\n            if (!paymentSelected) {\r\n                isValid = false;\r\n            }\r\n            \r\n            document.getElementById('checkout-btn').disabled = !isValid;\r\n        }\r\n        \r\n        // Checkout button functionality\r\n        document.getElementById('checkout-btn').addEventListener('click', function() {\r\n            if (this.disabled) return;\r\n            \r\n            // Show loading state\r\n            const originalText = this.innerHTML;\r\n            this.innerHTML = '<i class=\"fas fa-spinner fa-spin\"></i> Processing...';\r\n            this.disabled = true;\r\n            \r\n            // Simulate processing\r\n            setTimeout(() => {\r\n                // In a real implementation, this would submit the form\r\n                alert('Order placed successfully! You will receive a confirmation email shortly.');\r\n                \r\n                // Reset button\r\n                this.innerHTML = originalText;\r\n                this.disabled = false;\r\n                \r\n                // Redirect to confirmation page\r\n                window.location.href = 'confirmation.html';\r\n            }, 2000);\r\n        });\r\n        \r\n        // Initialize form validation\r\n        validateForm();\r\n    </script>\r\n</body>\r\n</html>"
        }
    ]
