n            transform: none;\r\n            box-shadow: none;\r\n        }\r\n\r\n        .security-notice {\r\n            display: flex;\r\n            align-items: center;\r\n            gap: 10px;\r\n            margin-top: 15px;\r\n            font-size: 0.9rem;\r\n            color: #666;\r\n        }\r\n\r\n        .security-notice i {\r\n            color: #4CAF50;\r\n        }\r\n\r\n        /* Footer Styles */\r\n        footer {\r\n            background: linear-gradient(180deg, #f6e9df 0%, #fff 100%);\r\n            padding: 48px 20px;\r\n            border-top: 1px solid rgba(15, 122, 99, 0.07);\r\n            margin-top: 60px;\r\n        }\r\n\r\n        .footer-inner {\r\n            max-width: 1200px;\r\n            margin: 0 auto;\r\n            display: grid;\r\n            gap: 28px;\r\n            grid-template-columns: 1fr;\r\n        }\r\n\r\n        .footer-brand {\r\n            display: flex;\r\n            gap: 16px;\r\n            align-items: flex-start;\r\n        }\r\n\r\n        .brand-logo {\r\n            width: 64px;\r\n            height: 64px;\r\n            flex: 0 0 64px;\r\n            border-radius: 10px;\r\n            background: linear-gradient(135deg, #0f7a63, #0c5f4d);\r\n            display: grid;\r\n            place-items: center;\r\n            color: #fff;\r\n            font-weight: 700;\r\n            font-size: 20px;\r\n            box-shadow: 0 6px 18px rgba(12, 95, 77, 0.10);\r\n        }\r\n\r\n        .brand-info h3 {\r\n            margin: 0 0 6px 0;\r\n            font-size: 18px;\r\n            line-height: 1;\r\n        }\r\n\r\n        .brand-info p {\r\n            margin: 0;\r\n            color: #5b6d70;\r\n            font-size: 14px;\r\n        }\r\n\r\n        .footer-columns {\r\n            display: grid;\r\n            grid-template-columns: repeat(2, minmax(0, 1fr));\r\n            gap: 18px;\r\n        }\r\n\r\n        .col h4 {\r\n            margin: 0 0 12px 0;\r\n            font-size: 15px;\r\n            color: #20323a;\r\n        }\r\n\r\n        .col ul {\r\n            list-style: none;\r\n            padding: 0;\r\n            margin: 0;\r\n            display: grid;\r\n            gap: 8px;\r\n        }\r\n\r\n        .col a {\r\n            color: #5b6d70;\r\n            text-decoration: none;\r\n            font-size: 14px;\r\n            transition: color .18s ease;\r\n        }\r\n\r\n        .col a:hover {\r\n            color: #0c5f4d;\r\n        }\r\n\r\n        .footer-bottom {\r\n            margin-top: 18px;\r\n            display: flex;\r\n            align-items: center;\r\n            justify-content: space-between;\r\n            gap: 12px;\r\n            border-top: 1px solid rgba(15, 122, 99, 0.06);\r\n            padding-top: 18px;\r\n            flex-wrap: wrap;\r\n            max-width: 1200px;\r\n            margin: 18px auto 0;\r\n        }\r\n\r\n        .copyright {\r\n            color: #5b6d70;\r\n            font-size: 13px;\r\n        }\r\n\r\n        .policies {\r\n            display: flex;\r\n            gap: 12px;\r\n            align-items: center;\r\n        }\r\n\r\n        .policies a {\r\n            color: #5b6d70;\r\n            font-size: 13px;\r\n            text-decoration: none;\r\n        }\r\n\r\n        /* Responsive Styles */\r\n        @media (max-width: 1024px) {\r\n            .checkout-container {\r\n                grid-template-columns: 1fr;\r\n            }\r\n            \r\n            .order-summary {\r\n                position: static;\r\n            }\r\n        }\r\n\r\n        @media (max-width: 768px) {\r\n            .form-row {\r\n                grid-template-columns: 1fr;\r\n            }\r\n            \r\n            .checkout-title {\r\n                font-size: 2rem;\r\n            }\r\n            \r\n            .checkout-steps {\r\n                flex-wrap: wrap;\r\n                gap: 10px;\r\n            }\r\n            \r\n            .step-divider {\r\n                display: none;\r\n            }\r\n            \r\n            .footer-columns {\r\n                grid-template-columns: 1fr;\r\n            }\r\n        }\r\n\r\n        @media (max-width: 576px) {\r\n            .checkout-section {\r\n                padding: 20px;\r\n            }\r\n            \r\n            .payment-method {\r\n                flex-direction: column;\r\n                text-align: center;\r\n            }\r\n            \r\n            .footer-bottom {\r\n                flex-direction: column;\r\n                text-align: center;\r\n            }\r\n        }\r\n    </style>\r\n</head>\r\n<body>\r\n    <!-- Navigation -->\r\n    <nav>\r\n        <div class=\"nav-container\">\r\n            <div class=\"logo\">\r\n                <img src=\"image/logo.png\" alt=\"Tech Bazzar Logo\" class=\"logo-img\">\r\n                <p>Tech Bazzar</p>\r\n            </div>\r\n            \r\n            <div class=\"nav-menu\">\r\n                <ul class=\"nav-links\">\r\n                    <li><a href=\"index.html\" class=\"nav-link\">Home</a></li>\r\n                    <li><a href=\"products.html\" class=\"nav-link\">Products</a></li>\r\n                    <li><a href=\"#about\" class=\"nav-link\">About Us</a></li>\r\n                    <li><a href=\"#contact\" class=\"nav-link\">Contact</a></li>\r\n                </ul>\r\n                \r\n                <div class=\"nav-right\">\r\n                    <button class=\"login-btn\">\r\n                        <i class=\"fas fa-user\"></i>\r\n                        <span>Login/Register</span>\r\n                    </button>\r\n                    <button class=\"language-btn\" aria-label=\"Change language\">\r\n                        <i class=\"fa-solid fa-globe\"></i>\r\n                    </button>\r\n                    <a href=\"cart.html\" class=\"cart-btn\" aria-label=\"Shopping cart\">\r\n                        <i class=\"fa-solid fa-cart-shopping\"></i>\r\n                        <span class=\"cart-count\">3</span>\r\n                    </a>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </nav>\r\n\r\n    <!-- Checkout Content -->\r\n    <div class=\"checkout-container\">\r\n        <div class=\"checkout-main\">\r\n            <div class=\"checkout-header\">\r\n                <h1 class=\"checkout-title\">Checkout</h1>\r\n                <div class=\"checkout-steps\">\r\n                    <div class=\"step completed\">\r\n                        <div class=\"step-number\">1</div>\r\n                        <span>Cart</span>\r\n                    </div>\r\n                    <div class=\"step-divider\"></div>\r\n                    <div class=\"step active\">\r\n                        <div class=\"step-number\">2</div>\r\n                        <span>Information</span>\r\n                    </div>\r\n                    <div class=\"step-divider\"></div>\r\n                    <div class=\"step\">\r\n                        <div class=\"step-number\">3</div>\r\n                        <span>Payment</span>\r\n                    </div>\r\n                    <div class=\"step-divider\"></div>\r\n                    <div class=\"step\">\r\n                        <div class=\"step-number\">4</div>\r\n                        <span>Confirmation</span>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n            \r\n            <!-- Shipping Information -->\r\n            <div class=\"checkout-section\">\r\n                <h2 class=\"section-title\"><i class=\"fas fa-truck\"></i> Shipping Information</h2>\r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"fullName\">Full Name</label>\r\n                    <input type=\"text\" id=\"fullName\" class=\"form-input\" placeholder=\"Enter your full name\" required>\r\n                </div>\r\n                \r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"phone\">Phone Number</label>\r\n                    <input type=\"tel\" id=\"phone\" class=\"form-input\" placeholder=\"Enter your phone number\" required>\r\n                </div>\r\n                \r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"address\">Address</label>\r\n                    <input type=\"text\" id=\"address\" class=\"form-input\" placeholder=\"Enter your street address\" required>\r\n                </div>\r\n                \r\n                <div class=\"form-row\">\r\n                    <div class=\"form-group\">\r\n                        <label class=\"form-label\" for=\"city\">City</label>\r\n                        <input type=\"text\" id=\"city\" class=\"form-input\" placeholder=\"Enter your city\" required>\r\n                    </div>\r\n                    \r\n                    <div class=\"form-group\">\r\n                        <label class=\"form-label\" for=\"state\">State/Region</label>\r\n                        <input type=\"text\" id=\"state\" class=\"form-input\" placeholder=\"Enter your state/region\" required>\r\n                    </div>\r\n                </div>\r\n                \r\n                <div class=\"form-group\">\r\n                    <label class=\"form-label\" for=\"notes\">Delivery Notes (Optional)</label>\r\n                    <textarea id=\"notes\" class=\"form-input\" rows=\"3\" placeholder=\"Any special instructions for delivery\"></textarea>\r\n                </div>\r\n            </div>\r\n            \r\n            <!-- Payment Method -->\r\n            <div class=\"checkout-section\">\r\n                <h2 class=\"section-title\"><i class=\"fas fa-credit-card\"></i> Payment Method</h2>\r\n                <div class=\"payment-methods\">\r\n                    <!-- Bankak Payment -->\r\n                    <div class=\"payment-method\" data-method=\"bankak\">\r\n                        <div class=\"